>`1,7,my debuffs:@debuffs.string@
>`1,8,@item.left@:@item.left.state@:@item.left.time@
>`1,9,@item.right@:@item.right.state@:@item.right.time@

// Status bottom screen
>`1,21,distance:@foe.distance@
>`1,22,state:@foe.state@
>`1,23,time:@foe.time@
>`1,24,armor:@foe.armor@
>`1,25,name:@foe.name@


// vigor hammer+shield keeps you alive
?loc = boiling
	
	// Bossfight
	?foe = Bronze Guardian
		?foe.state = 32 & foe.time = 32
			equip Mind
		:?foe.armor >= 1000 &
		^foe.distance <= 21 &
		^item.GetCooldown("hammer") <= 0 |
		^item.GetCooldown("hammer") >= 647
			equip Heavy Hammer
			?item.CanActivate("hammer")
				activate R
		:?summon.count = 0
			equipL Fire Talisman
			equipR Vigor Shield
			?item.CanActivate("fire_talisman")
				activate L
		:?foe.state = 33
			?foe.distance > 20
				equipL Star Stone
				equipR Triskelion
			:
				equipL Aether Wand +7
				equipR Aether Wand +6
		:
			equipL Aether Wand +7
			equipR Aether Wand +6
		?foe.debuffs.count = 10 &
		^foe.armor <= 0
			activate cinderwisp
	
  // mookfights, change hp to your pref
	:?foe.distance <= 22 &
	^foe.distance > 16 &
	^buffs.string = smite &
	^hp >= 50 &
	^foe ! Bomb Cart
  	equipL Poison wand dP
	  equipR Fire wand dF

	:?item.GetCooldown("quarterstaff") <= 0 &
  ^foe.distance >= 5 &
  ^foe.distance ! 9999 &
  ^summon.count ! 0
    equip quarterstaff
    ?item.CanActivate("quarterstaff")
      activate R

	:?foe.distance <= 16
		?foe.count >= 2 &
  	^screen.i >= 1 &
		^item.GetCooldown("blade") <= 0 &
			screen.next()
			equip blade
			?item.CanActivate("blade")
				activate R
				screen.ResetOffset()

	  :?item.GetCooldown("dash") <= 0 &
	  ^foe.distance > 10 &
	  ^foe ! Bomb Cart
	    equip dash
		
		:?hp < 35 & foe ! Bomb Cart
			?foe.count <= 2 & foe ! Fire Element
				equipL Vigor Sword *7
				equipR Vigor Sword *6
			:
				equipL Vigor Hammer dh
				equipR Vigor Shield ah
		:?foe.distance <= 16
			equip ice staff
		
		?foe = Bomb Cart &
		^foe.distance <= 6
			equip Mind
	
	:?summon.count = 0
		equipL Fire Talisman
		equipR Triskelion
  	?item.CanActivate("fire_talisman")
    	activate L
	:?pickup.distance <= 4
	  equipL Triskelion
	  equipR Star Stone
	:
	  equipL Triskelion
	  equipR aether shield A



